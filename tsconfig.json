{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es2015",
    "noImplicitAny": true,
    "lib": ["ESNext", "DOM"],
    "outDir": "./dist",
    "target": "es5",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist", "./public"]
}
